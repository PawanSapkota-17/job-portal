<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F6FD"
    android:fitsSystemWindows="true"
    tools:context=".VerifyCompanyActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleVerifyCompany"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Verify Company"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center" />

    <!-- ScrollView for Form -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleVerifyCompany"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Company Logo Upload -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Logo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivCompanyLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_upload"
                android:scaleType="centerInside"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:contentDescription="Upload Logo"
                android:layout_marginBottom="16dp" />

            <!-- Company Name -->
            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp" />

            <!-- Company Address -->
            <EditText
                android:id="@+id/etCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Address"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp" />

            <!-- Company Website -->
            <EditText
                android:id="@+id/etCompanyWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Website"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp" />

            <!-- Verification Document Upload -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verification Document"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivUploadDocument"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_upload"
                android:scaleType="centerInside"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:contentDescription="Upload Document"
                android:layout_marginBottom="24dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitVerification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Verification"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
