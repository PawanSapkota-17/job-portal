<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F9FF"
    tools:context=".UserPasswordManagerActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButtonUser"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleUserChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Change Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Current Password -->
    <EditText
        android:id="@+id/etUserCurrentPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter Current Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintTop_toBottomOf="@id/titleUserChangePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- New Password -->
    <EditText
        android:id="@+id/etUserNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintTop_toBottomOf="@id/etUserCurrentPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirm Password -->
    <EditText
        android:id="@+id/etUserConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintTop_toBottomOf="@id/etUserNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnUserSavePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save New Password"
        android:backgroundTint="#1976D2"
        android:textColor="#FFF"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etUserConfirmPassword"
        app:layout_constraintStart_toStartOf="@id/etUserConfirmPassword"
        app:layout_constraintEnd_toEndOf="@id/etUserConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
